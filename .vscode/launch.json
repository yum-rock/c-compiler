    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc - アクティブ ファイルのビルドとデバッグ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            // "args": ["1 1 + 2 <= 3"],
            // "args": ["1 + 2 <= 3"],
            // "args": ["1 == 1 + 1"],
            "args": ["a=b=2; b=b+3; a * b;"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "gcc build active file"
        }
    ]
}